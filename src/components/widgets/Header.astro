---
import { IconSun, IconGithub, IconMenu, IconRSS } from "~/components/icons";
const {} = Astro.props;
---

<header
  class="fixed top-0 z-40 flex-none mx-auto w-full bg-white/90 dark:bg-slate-900/90 backdrop-blur-sm border-b dark:border-b-0"
>
  <div class="py-3 px-3 mx-auto w-full md:flex md:justify-between md:px-7">
    <div class="flex justify-between">
      <a class="flex items-center" href="/">
        <span
          class="font-mono-display self-center ml-2 text-2xl font-extrabold text-gray-900 whitespace-nowrap dark:text-white"
          >MK
        </span>
      </a>
      <div class="flex items-center md:hidden">
        <button
          type="button"
          class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
          aria-label="Toggle between Dark and Light mode"
          onclick="window.toggleDarkMode()"
        >
          <IconSun class="w-6 h-6" />
        </button>
        <button
          class="ml-1.5 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
          aria-label="Toggle Menu"
          onclick="toggleMenu()"
        >
          <IconMenu class="w-6 h-6" />
        </button>
      </div>
    </div>
    <nav
      class="items-center w-full md:w-auto hidden md:flex text-gray-600 dark:text-slate-200"
      aria-label="Main navigation"
      id="menu"
    >
      <ul
        class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base"
      >
        <li>
          <a
            class="font-medium hover:bg-clip-text hover:text-transparent hover:bg-gradient-to-r hover:from-blue-500 hover:to-pink-500 decoration-gray-900 dark:decoration-slate-200 px-4 py-3 flex items-center transition duration-150 ease-in-out"
            href="#about"
            ><span
              class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-pink-500"
              >01.&nbsp;
            </span>About
          </a>
        </li>
        <li>
          <a
            class="font-medium hover:bg-clip-text hover:text-transparent hover:bg-gradient-to-r hover:from-blue-500 hover:to-pink-500 decoration-gray-900 dark:decoration-slate-200 px-4 py-3 flex items-center transition duration-150 ease-in-out"
            href="#experience"
            ><span
              class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-pink-500"
              >02.&nbsp;
            </span>Experience
          </a>
        </li>
        <li>
          <a
            class="font-medium hover:bg-clip-text hover:text-transparent hover:bg-gradient-to-r hover:from-blue-500 hover:to-pink-500 decoration-gray-900 dark:decoration-slate-200 px-4 py-3 flex items-center transition duration-150 ease-in-out"
            href="#work"
            ><span
              class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-pink-500"
              >03.&nbsp;
            </span>Work
          </a>
        </li>
        <li>
          <a
            class="font-medium hover:bg-clip-text hover:text-transparent hover:bg-gradient-to-r hover:from-blue-500 hover:to-pink-500 decoration-gray-900 dark:decoration-slate-200 px-4 py-3 flex items-center transition duration-150 ease-in-out"
            href="#contact"
            ><span
              class="bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-pink-500"
              >04.&nbsp;
            </span>Contact
          </a>
        </li>
        <li class="flex items-center">
          <a
            class="btn text-white bg-gray-900 hover:bg-gray-800 dark:bg-gray-700 dark:hover:bg-gray-800 ml-4"
            href="/Maxime-Koitsalu-Resume.pdf"
            target="_blank"
            rel="noopener"
            >Resume
          </a>
        </li>
      </ul>
      <div class="border-l ml-4 mr-2 dark:border-slate-300 border-gray-900 h-4">
      </div>
      <div
        class="md:self-center flex items-center mb-4 md:mb-0 collapse collapsed"
      >
        <div class="hidden items-center mr-3 md:flex">
          <button
            type="button"
            class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
            aria-label="Toggle between Dark and Light mode"
            onclick="window.toggleDarkMode()"
          >
            <IconSun />
          </button>
        </div>
      </div>
    </nav>
  </div>
</header>
